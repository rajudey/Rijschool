<h1>Nieuwe Rijschool</h1>

<%= form_for @school do |f| %>
  <p>
    <%= f.label      :name %><br/>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label      :contact %><br/>
    <%= f.text_field :contact %>
  </p>
  <p>
    <%= f.label      :description %><br/>
    <%= f.text_area  :description %>
  </p>
  <p>
    <%= f.label      :link %><br/>
    <%= f.text_field :link %>
  </p>  
  <p>
    <%= f.submit %>
  </p>
<% end %>