<% if @school.errors.any? %>
  <h2>The following messages prevented the rijschool to be created</h2>
  <ul>
    <% @school.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@school, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="col-sm-2 control-label"> 
          <%= f.label      :name %> 
        </div>
        <div class="col-sm-8"> 
          <%= f.text_field :name, class: "form-control", placeholder: "Name of Rijschool", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2 control-label"> 
          <%= f.label      :contact %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :contact, class: "form-control", placeholder: "Contact in Rijschool", autofocus: true %>
        </div>
      </div> 
      <div class="form-group">
        <div class="col-sm-2 control-label"> 
          <%= f.label      :description %> 
        </div>
        <div class="col-sm-8">
          <%= f.text_area  :description, row: 10, class: "form-control", placeholder: "Description about Rijschool", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label      :link %> 
        </div>
        <div class="col-sm-8">
          <%= f.text_field :link, class: "form-control", placeholder: "Web link for Rijschool", autofocus: true %>
        </div>
      </div>  
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-6 col-xs-offset-4">
      [ <%= link_to "Cancel request and return to Show Rijschools", schools_path %> ]
    </div>
  </div>
</div>