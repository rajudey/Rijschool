<% if @school.errors.any? %>
  <h2>The following messages prevented the rijschool to be created</h2>
  <ul>
    <% @school.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @school do |f| %>
  <p>
    <%= f.label      :name %><br/>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label      :contact %><br/>
    <%= f.text_field :contact %>
  </p>
  <p>
    <%= f.label      :description %><br/>
    <%= f.text_area  :description %>
  </p>
  <p>
    <%= f.label      :link %><br/>
    <%= f.text_field :link %>
  </p>  
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to "Back", schools_path %>